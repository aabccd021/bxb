{
  "name": "masmott",
  "license": "MIT",
  "version": "0.1.4",
  "scripts": {
    "build": "yarn build:core && yarn build:server && yarn build:cli && yarn prep",
    "prep": "node scripts/prepare",
    "lint": "eslint --ext .js,.ts .",
    "test": "nyc --reporter=text --reporter=html mocha -r ts-node/register 'test/**/*.ts'",
    "build:cli": "rm -rf bin && cd cli && tsc",
    "build:core": "rm -rf dist && tsc",
    "build:server": "rm -rf server/dist && cd server && tsc"
  },
  "engines": {
    "node": "14"
  },
  "bin": "./bin/cli/index.js",
  "files": [
    "dist/",
    "server/dist/",
    "server/package.json",
    "bin"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "require": "./server/dist/server/index.js",
      "types": "./server/dist/server/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "babel-plugin-istanbul": "^6.1.1",
    "firebase-admin": "^10.0.0",
    "firebase-functions": "^3.15.7",
    "next": "^12.0.1",
    "react": "17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "assert-never": "^1.2.1",
    "babel-plugin-istanbul": "^6.1.1",
    "firebase": "^9.1.3",
    "io-ts": "^2.2.16",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "swr": "^1.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/js-yaml": "^4.0.4",
    "@types/lodash": "^4.14.176",
    "@types/mocha": "^9.0.0",
    "@types/react": "^17.0.32",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "bunchee": "^1.7.2",
    "chai": "^4.3.4",
    "eslint": "7",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-functional": "^3.7.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^5.0.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "fast-check": "^2.18.1",
    "firebase-admin": "^10.0.0",
    "firebase-functions": "^3.15.7",
    "fs-extra": "^10.0.0",
    "mocha": "^9.1.3",
    "next": "^12.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "ts-sinon": "^2.0.2",
    "typescript": "^4.4.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "node": true,
      "browser": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "**/tsconfig.json"
      ],
      "sourceType": "module",
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "impliedStrict": true,
        "experimentalObjectRestSpread": true
      },
      "allowImportExportEverywhere": true
    },
    "ignorePatterns": [
      "**/*.js",
      "dist/",
      "node_modules",
      "scripts",
      "examples"
    ],
    "overrides": [
      {
        "files": [
          "test/**/*.ts"
        ],
        "rules": {
          "no-restricted-imports": "off",
          "import/no-internal-modules": "off",
          "import/no-relative-parent-imports": "off",
          "functional/prefer-readonly-type": "off"
        }
      }
    ],
    "plugins": [
      "@typescript-eslint",
      "functional",
      "only-warn",
      "unused-imports",
      "import",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:functional/lite",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:jest-dom/recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "plugin:testing-library/react",
      "prettier"
    ],
    "rules": {
      "no-restricted-imports": [
        "error",
        {
          "patterns": [
            "firebase-admin/*",
            "firebase-functions/*"
          ]
        }
      ],
      "no-unsafe-optional-chaining": "error",
      "no-use-before-define": [
        "error",
        {
          "variables": false
        }
      ],
      "no-else-return": "error",
      "no-useless-return": "error",
      "no-undef-init": "error",
      "no-useless-rename": "error",
      "object-shorthand": "error",
      "prefer-arrow-callback": "error",
      "prefer-destructuring": "error",
      "prefer-template": "error",
      "eqeqeq": "error",
      "@typescript-eslint/explicit-function-return-type": "error",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 100
        }
      ],
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "functional/no-throw-statement": "off",
      "functional/no-mixed-type": "off",
      "functional/no-return-void": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "unused-imports/no-unused-vars": [
        "error",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ],
      "import/no-cycle": "error",
      "import/no-unresolved": "off",
      "func-names": [
        2,
        "as-needed"
      ],
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}