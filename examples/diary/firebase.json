{
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  },
  "firestore": {
    "indexes": "firestore.indexes.json",
    "rules": "firestore.rules"
  },
  "functions": {
    "ignore": [
      "firebase.json",
      "firbease-debug.log",
      "**/.*",
      "**/node_modules/**",
      "pages/**",
      "public/**",
      "firestore.rules",
      "README.md"
    ],
    "source": "."
  },
  "hosting": [
    {
      "cleanUrls": true,
      "ignore": [
        "firebase.json",
        "firestore.indexes.json",
        "firestore.rules",
        "storage.rules",
        "remoteconfig.template.json",
        "tsconfig.json",
        "tsconfig.functions.json",
        "README.md",
        "**/node_modules/**",
        ".github/**",
        ".firebase/**",
        "pages/**"
      ],
      "public": "public",
      "rewrites": [
        {
          "function": "nextjs",
          "source": "**"
        }
      ]
    }
  ]
}