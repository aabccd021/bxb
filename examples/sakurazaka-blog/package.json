{
  "name": "sakurazaka-blog",
  "version": "0.1.0",
  "private": true,
  "main": ".functions/index.js",
  "engines": {
    "node": "14"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "masmott:build": "cd ../../packages/server && yarn build",
    "masmott:copy": "rm -rf node_modules/masmott-server && mkdir node_modules/masmott-server && cp -r ../../packages/server/lib node_modules/masmott-server/lib &&  cp -r ../../packages/server/package.json node_modules/masmott-server/package.json",
    "server:build": "yarn masmott:build  && yarn masmott:copy && tsc --project tsconfig.functions.json",
    "server:start:cached": "firebase emulators:start --project demo-sakurazaka-blog",
    "server:start": "yarn server:build && yarn server:start:cached ",
    "server:test:cached": "firebase emulators:exec --project demo-sakurazaka-blog \"yarn jest\"",
    "server:test": "yarn server:build && yarn server:test:cached",
    "test": "yarn server:build && yarn server:test:cached"
  },
  "dependencies": {
    "firebase-admin": "^10.0.0",
    "firebase-functions": "^3.15.7",
    "masmott-server": "file:./../../packages/server",
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/react": "17.0.30",
    "eslint": "8.0.1",
    "eslint-config-next": "11.1.2",
    "jest": "^27.2.5",
    "ts-jest": "^27.0.7",
    "typescript": "4.4.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  }
}
