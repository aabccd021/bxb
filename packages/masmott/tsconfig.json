{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "strictBindCallApply": true,
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "noEmitOnError": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "paths": {
      "masmott": [
        "./src/index.ts"
      ],
      "masmott/server": [
        "server/index.ts"
      ],
    },
    "typeRoots": [
      "./src/index",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./**/dist",
    "node_modules"
  ],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  }
}