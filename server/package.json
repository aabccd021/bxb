{
  "name": "functions",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "function:build": "yarn build && rm -rf functions/lib && cp -r lib functions/lib",
    "start": "firebase emulators:start --project demo-masmott",
    "lint": "eslint --ext .js,.ts .",
    "test:cached": "yarn firebase emulators:exec --project demo-masmott \"yarn jest\"",
    "test": "yarn function:build && yarn test:cached"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "assert-never": "^1.2.1",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.174",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-functional": "^3.7.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.5.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "firebase-functions-test": "^0.3.2",
    "firebase-tools": "^9.19.0",
    "jest": "^27.2.4",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "tsconfig.json"
      ],
      "sourceType": "module"
    },
    "ignorePatterns": [
      "**/lib/**/*"
    ],
    "plugins": [
      "@typescript-eslint",
      "functional",
      "import",
      "only-warn",
      "unused-imports",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:functional/lite",
      "plugin:import/errors",
      "plugin:import/typescript",
      "plugin:import/warnings",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "rules": {
      "no-restricted-imports": [
        "error",
        "firebase-admin",
        "firebase-functions"
      ],
      "no-unsafe-optional-chaining": "error",
      "no-use-before-define": "error",
      "no-else-return": "error",
      "no-useless-return": "error",
      "no-undef-init": "error",
      "no-useless-rename": "error",
      "object-shorthand": "error",
      "prefer-arrow-callback": "error",
      "prefer-destructuring": "error",
      "prefer-template": "error",
      "eqeqeq": "error",
      "@typescript-eslint/explicit-function-return-type": "error",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 80
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "functional/no-throw-statement": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "unused-imports/no-unused-imports-ts": "error",
      "unused-imports/no-unused-vars": [
        "error",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  }
}