{
  "emulators": {
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  },
  "functions": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "test/",
      "**./*.log",
      "**/.*",
      "**/node_modules/**",
      "**/*.json"
    ]
  },
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "tsconfig.json",
      "README.md",
      "**/node_modules/**",
      ".**",
      "pages/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjs"
      }
    ]
  }
}